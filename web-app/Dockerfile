FROM node:lts-alpine as base

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . ./

FROM base as build
COPY src ./src
RUN npm run build

FROM base as dev
CMD npm start

FROM build as ci
CMD npm run test

FROM build as prod
ARG REACT_APP_REQUEST_TIMEOUT
ENV REACT_APP_REQUEST_TIMEOUT $REACT_APP_REQUEST_TIMEOUT
ARG REACT_APP_RESET_PASSWORD_ROUTE
ENV REACT_APP_RESET_PASSWORD_ROUTE $REACT_APP_RESET_PASSWORD_ROUTE
ARG REACT_APP_ACCOUNT_CONFIRMATION_ROUTE
ENV REACT_APP_ACCOUNT_CONFIRMATION_ROUTE $REACT_APP_ACCOUNT_CONFIRMATION_ROUTE
ARG REACT_APP_RESET_EMAIL_ROUTE
ENV REACT_APP_RESET_EMAIL_ROUTE $REACT_APP_RESET_EMAIL_ROUTE
RUN npm install -g serve
CMD npx serve build -s